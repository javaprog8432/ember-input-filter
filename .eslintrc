{
  "ecmaFeatures": {
    "modules": true,
    "templateStrings": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "$": false,
    "addNumberCommas": false,
    "AddressResolver": false,
    "App": true,
    "Cache": false,
    "cloneObject": false,
    "DEBUG": false,
    "deparam": false,
    "Em": true,
    "Ember": false,
    "flattenArray": true,
    "google": false,
    "GoogleMaps": false,
    "GoogleTagManager": false,
    "Highcharts": false,
    "hsq": true,
    "InfoBoxTreatment": false,
    "isFunction": false,
    "jQuery": false,
    "Foundation": false,
    "L": false,
    "Modernizr": false
  },
  "rules": {
    // Key: 0 -> Off, 1 -> Warning, 2 -> Error
    // Possible Errors Rules
    "comma-dangle": [1, "never"],
    "no-cond-assign": [2, "except-parens"],
    "no-constant-condition": 1,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 1,
    "no-ex-assign": 1,
    "no-extend-native": 0,
    "no-extra-semi": 1,
    "no-func-assign": 1,
    "no-inner-declarations": 0, // Off because setting vars after try will throw this error
    "no-irregular-whitespace": 1,
    "no-obj-calls": 1,
    "no-reserved-keys": 1,
    "no-unreachable": 1,
    "use-isnan": 1,
    "valid-typeof": 1,

    // Best Practices
    "consistent-return": 0,
    "curly": 2,
    "dot-notation": 1,
    "dot-location": [1, "property"],
    "eqeqeq": 2,
    "no-caller": 2,
    "no-fallthrough": 1,
    "no-lone-blocks": 1,
    "no-loop-func": 1,
    "no-multi-spaces": 1,
    "no-new-func": 1,
    "no-redeclare": 1,
    "no-return-assign": [1, "except-parens"],
    "no-sequences": 1,
    "no-unused-expressions": 1,
    "no-with": 1,
    "radix": 1,
    "vars-on-top": 0, // Off because setting vars after try will throw this error
    "yoda": [1, "never"], // Yoda is confusing

    // Strict Mode
    "strict": 0, // We should try to start using this

    // Variables
    "no-shadow": 1,
    "no-undef": 2,
    "no-unused-vars": 1,
    "no-use-before-define": 2,

    // Stylistic
    "no-trailing-spaces": 1,
    "no-underscore-dangle": 0,
    "quotes": [1, "single"],
    "semi": 1
  }
}
